<Window x:Class="MedicalProject.EditDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalProject"
        mc:Ignorable="d"
        Title="EditDoctorWindow" Height="327.866" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">
        <Label>Jméno</Label>
        <TextBox Text="{Binding Jmeno}"></TextBox>

        <Label>Příjmení</Label>
        <TextBox Text="{Binding Prijmeni}"></TextBox>

        <Label>Specializace</Label>
        <TextBox Text="{Binding Specializace}"></TextBox>

        <Label>PrihlasovaciJmeno</Label>
        <TextBox x:Name="loginUsernameTextBox" Text="{Binding PrihlasovaciJmeno}"></TextBox>

        <Label>PrihlasovaciHeslo</Label>
        <TextBox x:Name="loginPasswdTextBox" Text="{Binding PrihlasovaciHeslo}"></TextBox>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="OkBtn" Content="OK" Margin="10" Padding="5" Click="OkBtn_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
